<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <RelativeLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/relativeLayout1">
        <ImageView android:layout_width="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_height="wrap_content" android:src="@drawable/icon" android:id="@+id/notificationImage" android:maxHeight="40dp" android:minHeight="40dp" android:maxWidth="40dp" android:minWidth="40dp" android:layout_marginLeft="3dp" android:layout_marginTop="3dp"></ImageView>
        <TextView android:textColor="#FF000000" android:layout_height="wrap_content" android:layout_width="wrap_content" android:gravity="right|center_vertical" android:text=""></TextView>
        <TextView android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/notificationText" android:textColor="#FF000000" android:text="Text1" android:layout_alignTop="@+id/notificationImage" android:layout_alignParentRight="true" android:layout_toRightOf="@+id/notificationImage" android:layout_marginLeft="5dp" android:layout_marginRight="3dp"></TextView>
        <TextView android:text="Text4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/notifcationReceivedTime" android:layout_alignParentBottom="true" android:layout_alignParentRight="true" android:layout_below="@+id/notificationText" android:layout_marginRight="3dp" android:layout_marginTop="2dp"></TextView>
    </RelativeLayout>
    
</LinearLayout>
